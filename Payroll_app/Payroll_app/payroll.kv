## Removed duplicate BoxLayout and old content
MDBoxLayout:
    orientation: "vertical"
    padding: 20
    spacing: 10
    md_bg_color: 0, 0.6, 0.6, 1

    MDLabel:
        text: "Basic Payroll Calculator"
        halign: "center"
            font_style: "Headline"
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        size_hint_y: None
        height: self.texture_size[1] + 20

    MDLabel:
        text: "By Belachew Kebede"
        halign: "center"
            font_style: "Title"
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        size_hint_y: None
        height: self.texture_size[1] + 10

    MDBoxLayout:
        orientation: "horizontal"
        padding: [0, 20, 0, 0]
        spacing: 40
        MDBoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint_x: 0.5
            MDLabel:
                text: "Input Data"
                                    font_style: "Title"
                halign: "center"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                size_hint_y: None
                height: self.texture_size[1] + 10
            MDGridLayout:
                cols: 2
                spacing: 5
                size_hint_y: None
                height: self.minimum_height
                MDLabel:
                    text: "Full Name"
                    halign: "right"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                MDTextField:
                    id: name
                    hint_text: "Full Name"
                MDLabel:
                    text: "Salary"
                    halign: "right"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                MDTextField:
                    id: salary
                    hint_text: "Salary"
                    input_filter: "float"
                MDLabel:
                    text: "Other Income"
                    halign: "right"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                MDTextField:
                    id: other_income
                    hint_text: "Other Income"
                    input_filter: "float"
                MDLabel:
                    text: "Month"
                    halign: "right"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                MDTextField:
                    id: month
                    hint_text: "Month"
                    input_filter: "int"
                MDLabel:
                    text: "Year"
                    halign: "right"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                MDTextField:
                    id: year
                    hint_text: "Year"
                    input_filter: "int"
                MDLabel:
                    text: "Pay Pension?"
                    halign: "right"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                MDBoxLayout:
                    orientation: "horizontal"
                    spacing: 10
                    MDCheckbox:
                        id: pension_yes
                        group: "pension"
                        active: True
                    MDLabel:
                        text: "Yes"
                        theme_text_color: "Custom"
                        text_color: 0, 0, 1, 1
                        halign: "left"
                        size_hint_x: None
                        width: 40
                    MDCheckbox:
                        id: pension_no
                        group: "pension"
                        active: False
                    MDLabel:
                        text: "No"
                        theme_text_color: "Custom"
                        text_color: 0, 0, 1, 1
                        halign: "left"
                        size_hint_x: None
                        width: 40

        MDBoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint_x: 0.5
            MDLabel:
                text: "Results"
                    font_style: "Title"
                halign: "center"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                size_hint_y: None
                height: self.texture_size[1] + 10
            MDLabel:
                text: "Pension (7%)"
                id: pension_val
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
            MDLabel:
                text: "Income Tax"
                id: tax_val
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
            MDLabel:
                text: "Net Pay"
                id: netpay_val
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

    MDBoxLayout:
        orientation: "horizontal"
        spacing: 10
        size_hint_y: None
        height: 50
        padding: [0, 10, 0, 0]
        MDButton:
            text: "Calculate"
            style: "elevated"
            on_release: app.calculate()
        MDButton:
            text: "Reset"
            style: "elevated"
            on_release: app.reset()
        MDButton:
            text: "Export to PDF"
            style: "elevated"
            on_release: app.export_pdf()
        MDButton:
            text: "Exit"
            style: "elevated"
            on_release: app.stop()
            theme_text_color: "Custom"
